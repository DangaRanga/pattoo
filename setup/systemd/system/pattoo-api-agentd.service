[Unit]
Description=pattoo-api-agentd daemon
Wants=network.target
After=network.target

[Service]
Environment="PATTOO_CONFIGDIR=x"
Environment="BIN_DIR=x"
ExecStart=$BIN_DIR/pattoo-api-agentd --start
ExecStop=$BIN_DIR/pattoo-api-agentd --stop
ExecReload=$BIN_DIR/pattoo-api-agentd --restart

[Install]
WantedBy=multi-user.target
